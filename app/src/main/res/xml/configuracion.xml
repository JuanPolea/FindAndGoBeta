<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">


    <PreferenceCategory android:title="@string/action_settings">


        <com.findandgoapp.custom.CustomSwitchPreference
            android:title="@string/sSonido"
            android:key="idSwitchPreferences"
            android:defaultValue="true"
            android:summaryOn="@string/sActivado"
            android:summaryOff="@string/sDesactivado"
            android:icon="@drawable/ic_sound"
            android:selectable="true" />


    </PreferenceCategory>

    <PreferenceCategory android:title="@string/sAcercaDe">
        <EditTextPreference
            android:title="@string/sAcercaDe"
            android:editable="false"
            android:key="licencia"
            android:summary="@string/sLicencia"
            android:icon="@drawable/ic_info_black_24dp"
            android:negativeButtonText=""></EditTextPreference>

        <EditTextPreference
            android:title="@string/sContatco"
            android:editable="false"
            android:key="contacto"
            android:summary="@string/sContacto"
            android:negativeButtonText=""
            android:icon="@drawable/ic_contac_us"></EditTextPreference>

    </PreferenceCategory>

</PreferenceScreen>