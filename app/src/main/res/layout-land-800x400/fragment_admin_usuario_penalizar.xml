<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.findandgoapp.fragment.AdminUsuarioPenalizarFragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminNombreUsuarioTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sUsuario"
        android:textAppearance="?android:attr/textAppearanceSmall"
        style="@style/cabecera"
        android:textColor="@color/grisMuyOscuro"
        app:font="@string/font_name_source_amatic_regular" />

    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminEmailUsuarioPenalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:font="@string/font_name_source_amatic_regular"
        style="@style/Texto"
        android:textColor="@color/negro"
        android:layout_alignBottom="@+id/tvAdminEmailUsuarioTitulo"
        android:layout_toRightOf="@+id/tvAdminEmailUsuarioTitulo"
        android:text=""
        android:textSize="@dimen/size_15"
        android:layout_alignRight="@+id/tvAdminNombreUsuarioPenalizar" />


    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminTipoUsuarioPenalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Texto"
        android:textColor="@color/negro"
        app:font="@string/font_name_source_amatic_regular"
        android:layout_alignBottom="@+id/tvAdminTipoUsuarioTitulo"
        android:layout_toRightOf="@+id/tvAdminTipoUsuarioTitulo"
        android:layout_toEndOf="@+id/tvAdminTipoUsuarioTitulo"
        android:text=""
        android:textSize="@dimen/size_25" />

    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminEstadoUsPenalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAdminTipoUsuarioPenalizar"
        android:paddingTop="@dimen/size_10"
        android:text="@string/sEstado"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/grisMuyOscuro"
        app:font="@string/font_name_source_amatic_regular"
        style="@style/cabecera"
        android:layout_marginRight="@dimen/size_20" />

    <com.findandgoapp.custom.CustomFontTextView

        android:id="@+id/idTvEventosCreadosUsuarioPenalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/size_10"
        android:text="@string/sNumEventosCreados"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/cabecera"
        app:font="@string/font_name_source_amatic_regular"
        android:textColor="@color/grisMuyOscuro"
        android:layout_below="@+id/tvAdminEstadoUsPenalizar"
        android:layout_marginRight="@dimen/size_20" />

    <com.findandgoapp.custom.CustomFontTextView

        android:id="@+id/idTvNumEventosCreadosUsuarioPenalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/Texto"
        app:font="@string/font_name_source_amatic_regular"
        android:textColor="@color/negro"
        android:layout_alignBottom="@+id/idTvEventosCreadosUsuarioPenalizar"

        android:layout_toEndOf="@+id/idTvEventosCreadosUsuarioPenalizar"
        android:textSize="@dimen/size_25"
        android:layout_toRightOf="@+id/idTvEventosCreadosUsuarioPenalizar" />


    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminEstadoUsuarioPenalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10"
        android:textColor="@color/verdeClaro"
        app:font="@string/font_name_source_amatic_regular"
        style="@style/Texto"
        android:text=""
        android:textSize="@dimen/size_25"
        android:layout_alignBaseline="@+id/tvAdminEstadoUsPenalizar"
        android:layout_alignBottom="@+id/tvAdminEstadoUsPenalizar"
        android:layout_toEndOf="@+id/tvAdminEstadoUsPenalizar"
        android:layout_toRightOf="@+id/tvAdminEstadoUsPenalizar" />

    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminNombreUsuarioPenalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAppearance="?android:attr/textAppearanceLarge"
        app:font="@string/font_name_source_amatic_regular"
        android:textColor="@color/negro"
        style="@style/Texto"
        android:text=""
        android:textSize="@dimen/size_15"
        android:layout_gravity="center|left"
        android:layout_alignBaseline="@+id/tvAdminNombreUsuarioTitulo"
        android:layout_alignBottom="@+id/tvAdminNombreUsuarioTitulo"
        android:layout_alignStart="@+id/tvAdminEstadoUsuarioPenalizar"
        android:layout_alignLeft="@+id/tvAdminEstadoUsuarioPenalizar" />

    <GridLayout
        android:orientation="vertical"
        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_150"
        android:id="@+id/tabla"
        android:layout_marginLeft="27dp"
        android:layout_below="@+id/idTvResument"
        android:layout_alignParentEnd="true">

        <ImageView
            android:background="@drawable/ic_arrow_out"
            android:layout_gravity="center_vertical"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_10"
            tools:ignore="ContentDescription" />

        <ImageView
            android:background="@drawable/ic_arrow_in"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_10"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivConfirmaciones"
            android:background="@drawable/ic_action_accept"

            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            tools:ignore="ContentDescription" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvNumConfirmacionesOut"
            android:layout_row="1"
            android:layout_column="1"
            android:text=""
            app:font="@string/font_name_source_amatic_regular"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_25"
            android:textColor="@color/negro" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvNumConfirmacionesIn"

            android:text=""
            app:font="@string/font_name_source_amatic_regular"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="@dimen/size_25"
            android:textColor="@color/negro" />

        <ImageView
            android:background="@drawable/ic_action_cancel"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            tools:ignore="ContentDescription" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvNumDenunciasOut"
            android:text=""
            app:font="@string/font_name_source_amatic_regular"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_25"
            android:textColor="@color/negro" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvNumDenunciasIn"

            android:text=""
            app:font="@string/font_name_source_amatic_regular"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="@dimen/size_25"
            android:textColor="@color/negro" />

        <ImageView
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:background="@drawable/comentario"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="@dimen/size_10"
            tools:ignore="ContentDescription" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvNumComentariosOut"
            android:text=""
            app:font="@string/font_name_source_amatic_regular"
            android:layout_marginRight="@dimen/size_10"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/size_25"
            android:textColor="@color/negro" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvNumComentariosIn"
            android:text=""
            app:font="@string/font_name_source_amatic_regular"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginLeft="@dimen/size_25"
            android:textColor="@color/negro" />
    </GridLayout>

    <com.findandgoapp.custom.CustomFontTextView

        android:id="@+id/idTvResument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10"
        android:text="@string/sAcciones"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/cabecera"
        app:font="@string/font_name_source_amatic_regular"
        android:textColor="@color/negro"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tabla" />

    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminEmailUsuarioTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10"

        android:text="@string/sEmail"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/grisMuyOscuro"
        style="@style/cabecera"

        app:font="@string/font_name_source_amatic_regular"
        android:layout_marginRight="@dimen/size_20"
        android:layout_below="@+id/tvAdminNombreUsuarioPenalizar"
        android:layout_alignParentStart="true" />

    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminTipoUsuarioTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10"
        android:text="@string/sTipo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/grisMuyOscuro"
        app:font="@string/font_name_source_amatic_regular"
        style="@style/cabecera"
        android:layout_marginRight="@dimen/size_20"
        android:layout_below="@+id/tvAdminEmailUsuarioTitulo"
        android:layout_alignParentStart="true" />

    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/idTvTipo1UsuarioPenalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sAddPenalizacion"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:font="@string/font_name_source_amatic_regular"
        style="@style/cabecera"
        android:textColor="@color/negro"
        android:gravity="center"
        android:layout_below="@+id/tabla"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"

        android:layout_alignTop="@+id/idTvTipo1UsuarioPenalizar"
        android:layout_toEndOf="@+id/tvAdminEmailUsuarioTitulo">


        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvTipo1UsuarioPenalizarRes"
            android:layout_width="@dimen/size_penalizacion"
            android:layout_height="@dimen/size_penalizacion"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/negro"
            app:font="@string/font_name_source_amatic_regular"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginLeft="@dimen/size_10" />

        <Button
            android:id="@+id/idBNumTipo1Add"
            android:layout_width="@dimen/size_penalizacion"
            android:layout_height="@dimen/size_penalizacion"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/ic_add"
            android:clickable="true"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp" />

        <Button
            android:id="@+id/idBNumTipo1Quit"
            android:layout_width="@dimen/size_penalizacion"
            android:layout_height="@dimen/size_penalizacion"
            android:background="@drawable/ic_quit"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_column="0"
            android:layout_row="0"


            />


    </GridLayout>

    <ImageView
        android:id="@+id/idIvBloqueado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_user_locked"
        android:layout_alignBottom="@+id/tvAdminEstadoUsuarioPenalizar"
        android:layout_toEndOf="@+id/tvAdminEstadoUsuarioPenalizar"
        android:layout_marginStart="11dp"
        tools:ignore="ContentDescription" />
</RelativeLayout>

