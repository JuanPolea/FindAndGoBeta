<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.findandgoapp.fragment.AdminUsuarioConsultaFragment">


    <ImageView
        android:id="@+id/ivBuscarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_aceptar_v"
        android:clickable="true"
        android:focusable="false"
        tools:ignore="ContentDescription" />

    <com.findandgoapp.custom.CustomFontEditText
        android:id="@+id/idEtBuscarPorEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivBuscarUsuario"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="114dp"
        android:hint="@string/sBuscarPorEmail"
        app:font="@string/font_name_source_amatic_regular" />

    <com.findandgoapp.custom.CustomFontEditText
        android:id="@+id/idEtBuscarPorNombre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idEtBuscarPorEmail"
        android:layout_alignParentStart="true"
        android:hint="@string/sBuscarPorNombre"
        app:font="@string/font_name_source_amatic_regular" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_logo"
        android:clickable="false"
        android:focusable="false"
        tools:ignore="ContentDescription" />

</RelativeLayout>

