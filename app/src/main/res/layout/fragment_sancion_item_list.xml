<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo"
    android:layout_marginTop="?attr/actionBarSize">

    <com.findandgoapp.custom.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTituloSanciones"
        android:visibility="visible"
        android:text="@string/sContactoSancion"
        android:textSize="@dimen/size_20"
        android:layout_below="@id/tool_bar"
        android:textColor="@color/grisMuyOscuro"
        app:font="@string/font_name_source_amatic_regular_bold"

        android:layout_marginBottom="@dimen/size_5"
        android:layout_marginStart="@dimen/size_10"

        android:paddingTop="@dimen/size_2" />

    <ListView
        android:id="@+id/listSanciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvTituloSanciones"
        android:clickable="true"
        android:focusable="true"
        android:divider="@color/transparente"
        android:dividerHeight="@dimen/size_2"
        android:layout_marginTop="@dimen/size_1"

        >

    </ListView>

</RelativeLayout>