<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.findandgoapp.activity.EventoSeleccionado"

    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <com.findandgoapp.custom.CustomFontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sDescripcionCabecera"
            app:font="@string/font_name_source_amatic_regular"
            style="@style/cabecera" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvDescripcionEventoSeleccionado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/eventoTexto"
            app:font="@string/font_name_source_amatic_regular_bold" />

        <com.findandgoapp.custom.CustomFontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sCategoriaCabecera"
            style="@style/cabecera"
            app:font="@string/font_name_source_amatic_regular" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvCategoriaEventoSeleccionado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/eventoTexto"
            app:font="@string/font_name_source_amatic_regular_bold" />

        <com.findandgoapp.custom.CustomFontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sClasificacionCabecera"
            style="@style/cabecera"
            app:font="@string/font_name_source_amatic_regular"

            />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvClasificacionEventoSeleccionado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/eventoTexto"
            app:font="@string/font_name_source_amatic_regular_bold" />

        <com.findandgoapp.custom.CustomFontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sTipoCabecera"
            style="@style/cabecera"
            app:font="@string/font_name_source_amatic_regular"

            />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvTipoEventoSeleccionado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            style="@style/eventoTexto"
            app:font="@string/font_name_source_amatic_regular_bold" />

        <com.findandgoapp.custom.CustomFontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sAlertaLugar"
            style="@style/cabecera"
            app:font="@string/font_name_source_amatic_regular" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvLugarEventoSeleccionado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/eventoTexto"
            app:font="@string/font_name_source_amatic_regular_bold" />


        <com.findandgoapp.custom.CustomFontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sDireccionCabecera"
            style="@style/cabecera"
            app:font="@string/font_name_source_amatic_regular" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvDireccionEventoSeleccionado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/eventoTexto"
            app:font="@string/font_name_source_amatic_regular_bold" />

        <com.findandgoapp.custom.CustomFontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sFechaCabecera"
            style="@style/cabecera"
            app:font="@string/font_name_source_amatic_regular" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvFechaEventoSeleccionado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/eventoTexto"
            app:font="@string/font_name_source_amatic_regular_bold" />

        <com.findandgoapp.custom.CustomFontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sHoraCabecera"
            style="@style/cabecera"
            app:font="@string/font_name_source_amatic_regular" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvHoraEventoSeleccionado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/eventoTexto"
            app:font="@string/font_name_source_amatic_regular_bold" />

        <com.findandgoapp.custom.CustomFontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sArtistaCabecera"
            style="@style/cabecera"
            app:font="@string/font_name_source_amatic_regular" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvArtistaEventoSeleccionado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/eventoTexto"
            app:font="@string/font_name_source_amatic_regular_bold" />

        <com.findandgoapp.custom.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sPrecioCabecera"
            style="@style/cabecera"
            app:font="@string/font_name_source_amatic_regular" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvPrecioEventoSeleccionado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/eventoTexto"
            app:font="@string/font_name_source_amatic_regular_bold" />

        <com.findandgoapp.custom.CustomFontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sCreadorCabecera"
            style="@style/cabecera"

            app:font="@string/font_name_source_amatic_regular" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvCreadorEventoSeleccionado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/eventoTexto"
            app:font="@string/font_name_source_amatic_regular_bold"
            android:textColor="@color/link" />

        <com.findandgoapp.custom.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SValoraciones"
            style="@style/cabecera"
            app:font="@string/font_name_source_amatic_regular"

            />

        <RelativeLayout android:id="@+id/idRelativeEventoSeleccionado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            xmlns:app="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:id="@+id/idIvMeGusta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_like"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                tools:ignore="ContentDescription" />

            <com.findandgoapp.custom.CustomFontTextView
                android:id="@+id/idTvNumeroDeConfirmados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iCero"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/idIvMeGusta"
                android:layout_toEndOf="@+id/idIvMeGusta"
                android:textSize="@dimen/size_15"
                android:textColor="@color/link"
                app:font="@string/font_name_source_amatic_regular" />

            <ImageView
                android:id="@+id/idIvNoMeGusta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_unlike"
                android:clickable="true"
                android:paddingLeft="@dimen/size_20"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/idTvNumeroDeConfirmados"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_toEndOf="@+id/idTvNumeroDeConfirmados"
                tools:ignore="ContentDescription" />

            <com.findandgoapp.custom.CustomFontTextView
                android:id="@+id/idTvNumeroDeDenunciados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iCero"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/idIvNoMeGusta"
                android:layout_toEndOf="@+id/idIvNoMeGusta"
                android:textSize="@dimen/size_15"
                android:textColor="@color/link"
                app:font="@string/font_name_source_amatic_regular" />

            <ImageView
                android:id="@+id/idIvComentarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_comentario"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/idTvNumeroDeDenunciados"
                android:layout_toEndOf="@+id/idTvNumeroDeDenunciados"
                android:layout_marginLeft="36dp"
                android:layout_marginStart="36dp"
                android:contentDescription="@string/tvNumDeComentarioDescripcion" />

            <com.findandgoapp.custom.CustomFontTextView
                android:id="@+id/idTvNumDeComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iCero"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/idIvComentarios"
                android:layout_toEndOf="@+id/idIvComentarios"
                android:textSize="@dimen/size_15"
                android:textColor="@color/link"

                app:font="@string/font_name_source_amatic_regular" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
