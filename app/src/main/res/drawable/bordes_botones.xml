<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_radio" />
            <stroke android:width="1dip" android:color="@color/link" />
            <gradient android:angle="-90" android:endColor="@color/transparente" android:startColor="@color/azul" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_radio" />
            <stroke android:width="@dimen/size_1" android:color="@color/link" />
            <solid android:color="@color/azul" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_radio" />
            <stroke android:width="@dimen/size_1" android:color="@color/link" />
            <gradient android:angle="-90" android:endColor="@color/transparente" android:startColor="@color/transparente" />
        </shape>
    </item>
</selector>