<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.findandgoapp.fragment.AdminUsuarioPenalizarFragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminNombreUsuarioTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sUsuario"
        android:textAppearance="?android:attr/textAppearanceSmall"
        style="@style/cabecera"
        app:font="@string/font_name_source_amatic_regular" />

    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminEmailUsuarioTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10"
        android:text="@string/sEmail"
        style="@style/cabecera"
        app:font="@string/font_name_source_amatic_regular"
        android:layout_marginRight="@dimen/size_20" />

    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminEmailUsuarioPenalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:font="@string/font_name_source_amatic_regular"
        style="@style/Texto"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="" />


    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminTipoUsuarioTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10"
        android:text="@string/sTipo"
        app:font="@string/font_name_source_amatic_regular"
        style="@style/cabecera"
        android:layout_marginRight="@dimen/size_20" />


    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminTipoUsuarioPenalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Texto"
        app:font="@string/font_name_source_amatic_regular"
        android:text="" />

    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminEstadoUsPenalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10"
        android:text="@string/sEstado"

        app:font="@string/font_name_source_amatic_regular"
        style="@style/cabecera"
        android:layout_marginRight="@dimen/size_20" />

    <com.findandgoapp.custom.CustomFontTextView

        android:id="@+id/idTvEventosCreadosUsuarioPenalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10"
        android:text="@string/sNumEventosCreados"

        style="@style/cabecera"
        app:font="@string/font_name_source_amatic_regular"

        android:layout_marginRight="@dimen/size_20" />

    <com.findandgoapp.custom.CustomFontTextView

        android:id="@+id/idTvNumEventosCreadosUsuarioPenalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10"
        android:text=""
        app:font="@string/font_name_source_amatic_regular"

        />


    <com.findandgoapp.custom.CustomFontTextView

        android:id="@+id/idTvResument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10"
        android:text="@string/sAcciones"

        style="@style/cabecera"
        app:font="@string/font_name_source_amatic_regular"

        android:layout_marginBottom="@dimen/size_10" />


    <GridLayout
        android:orientation="vertical"
        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_150"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp">


        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvTipo1UsuarioPenalizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sAddPenalizacion"

            app:font="@string/font_name_source_amatic_regular"
            style="@style/cabecera"

            android:gravity="center"
            android:layout_column="0"
            android:layout_row="0" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvTipo1UsuarioPenalizarRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"

            app:font="@string/font_name_source_amatic_regular"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_marginLeft="@dimen/size_10" />

        <Button
            android:id="@+id/idBNumTipo1Add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/btn_add_penalizacion"
            android:clickable="true"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp" />

        <Button
            android:id="@+id/idBNumTipo1Quit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_quit_penalizacion"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_column="1"
            android:layout_row="0"


            />


    </GridLayout>

    <GridLayout
        android:orientation="vertical"
        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_150"
        android:id="@+id/tabla"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp">

        <ImageView
            android:background="@drawable/ic_arrow_out"
            android:layout_gravity="center_vertical"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_10"
            tools:ignore="ContentDescription" />

        <ImageView
            android:background="@drawable/ic_arrow_in"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_10"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivConfirmaciones"
            android:background="@drawable/ic_action_accept"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            tools:ignore="ContentDescription" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvNumConfirmacionesOut"
            android:layout_row="1"
            android:layout_column="1"
            android:text=""
            app:font="@string/font_name_source_amatic_regular"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_25"
            android:textColor="@color/negro" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvNumConfirmacionesIn"

            android:text=""
            app:font="@string/font_name_source_amatic_regular"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="@dimen/size_25"
            android:textColor="@color/negro" />

        <ImageView
            android:background="@drawable/ic_action_cancel"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_10"
            tools:ignore="ContentDescription" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvNumDenunciasOut"
            android:text=""
            app:font="@string/font_name_source_amatic_regular"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_25"
            android:textColor="@color/negro" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvNumDenunciasIn"

            android:text=""
            app:font="@string/font_name_source_amatic_regular"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="@dimen/size_25"
            android:textColor="@color/negro" />

        <ImageView
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:background="@drawable/comentario"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="@dimen/size_10"
            tools:ignore="ContentDescription" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvNumComentariosOut"
            android:text=""
            app:font="@string/font_name_source_amatic_regular"
            android:layout_marginRight="@dimen/size_10"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/size_25"
            android:textColor="@color/negro" />

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvNumComentariosIn"
            android:text=""
            app:font="@string/font_name_source_amatic_regular"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginLeft="@dimen/size_25"
            android:textColor="@color/negro" />
    </GridLayout>

    <ImageView
        android:id="@+id/idIvBloqueado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_user_locked"
        android:layout_marginStart="11dp"
        tools:ignore="ContentDescription" />

    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminEstadoUsuarioPenalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10"
        android:textColor="@color/verdeClaro"
        app:font="@string/font_name_source_amatic_regular"

        android:text=""
        android:textSize="@dimen/size_25" />

    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/tvAdminNombreUsuarioPenalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Texto"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:font="@string/font_name_source_amatic_regular"
        android:text=""
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_gravity="center|left" />


</FrameLayout>