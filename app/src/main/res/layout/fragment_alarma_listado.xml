<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlAlerta"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    >


    <Switch
        android:id="@+id/idTBAlerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text=""
        android:textOff="@string/toggle_turn_off"
        android:textOn="@string/toggle_turn_on"
        android:paddingBottom="@dimen/size_2"
        android:paddingTop="@dimen/size_2"
        android:paddingRight="@dimen/size_5" />


    <ImageView
        android:id="@+id/ivFlechaAlerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_flecha"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_alignTop="@+id/idTvAlertaNombre"
        android:layout_alignParentEnd="true"
        tools:ignore="ContentDescription" />

    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/idTvAlertaNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"

        android:text=""
        android:textSize="@dimen/size_list_notificacion"
        app:font="@string/font_name_source_amatic_regular"
        android:paddingBottom="@dimen/size_10"
        android:layout_alignBaseline="@+id/idTBAlerta"
        android:layout_alignBottom="@+id/idTBAlerta"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
