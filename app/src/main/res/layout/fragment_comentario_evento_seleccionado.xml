<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Base.TextAppearance.AppCompat.Small"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LayoutComentarios"
    android:gravity="center_horizontal"

    android:baselineAligned="false">


    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/idTvComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="@dimen/size_10"
        android:textColor="@color/negro"
        android:text=""
        app:font="@string/font_name_source_amatic_regular"
        android:textSize="@dimen/size_list"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivFotoComentario" />

    <ImageView
        android:id="@+id/ivFotoComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/s_descripcion"
        android:layout_marginStart="13dp"
        android:layout_alignTop="@+id/idTvComentario"
        android:layout_alignParentStart="true" />

    <com.findandgoapp.custom.CustomFontTextView
        android:id="@+id/idTvComenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/sComentario"

        app:font="@string/font_name_source_amatic_regular_bold"
        android:textColor="@color/azulOscuro"

        android:textSize="@dimen/size_list_notificacion"
        android:layout_below="@+id/ivFotoComentario"
        android:layout_alignStart="@+id/ivFotoComentario" />


</RelativeLayout>




