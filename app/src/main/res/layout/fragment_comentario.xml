<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.findandgoapp.fragment.ComentarioFragment">


    <com.findandgoapp.custom.CustomFontEditText
        android:id="@+id/idEtAddComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:hint="@string/sComenta"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/negro"
        app:font="@string/font_name_source_amatic_regular_bold" />

    <Button
        android:id="@+id/idBAddComentario"
        android:layout_width="@dimen/size_50"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idEtAddComentario"
        android:layout_alignStart="@+id/idEtAddComentario"
        android:layout_below="@+id/idEtAddComentario"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_aceptar" />

    <Button
        android:id="@+id/idBCancelaAddComentario"
        android:layout_width="@dimen/size_50"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/idEtAddComentario"
        android:layout_alignRight="@+id/idEtAddComentario"
        android:layout_below="@+id/idEtAddComentario"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_cancelar" />

</RelativeLayout>

