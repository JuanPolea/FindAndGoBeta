<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    style="@style/AlertDialog.AppCompat.Light">

    <GridLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray"
        android:paddingBottom="@dimen/size_10"
        android:paddingTop="@dimen/size_10">

        <ImageView
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:background="@drawable/ic_warning"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_row="0"
            android:layout_column="0"
            tools:ignore="ContentDescription" />


        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/TvTituloMenuComentarios"
            android:text="@string/sDenunciasEventos"
            app:font="@string/font_name_source_amatic_regular_bold"
            android:textColor="@color/rojo"
            android:textSize="@dimen/size_20"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/size_20" />

        <Button
            android:id="@+id/bCancela"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:background="@drawable/btn_exit"
            android:layout_marginRight="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_row="0"
            android:layout_column="3" />

    </GridLayout>


    <ListView
        android:id="@+id/listaMenuPenalizaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridLayout"
        android:divider="@color/azulVioleta"
        android:dividerHeight="@dimen/size_1"
        android:background="@color/blanco" />


</RelativeLayout>