<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_evento_consulta"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.findandgoapp.fragment.EventoFragment">


    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.findandgoapp.fragment.EventoFragment">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/size_20"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilEventoNuevoNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"

                >

                <com.findandgoapp.custom.CustomFontEditText
                    android:id="@+id/idEtEventoNuevoNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignStart="@+id/idSpEventoNuevoCategoria"

                    android:hint="@string/sEventoNombre"
                    android:textSize="@dimen/size_12"
                    app:font="@string/font_name_source_amatic_regular" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilEventoNuevoLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tilEventoNuevoNombre"

                app:errorEnabled="true"

                >

                <com.findandgoapp.custom.CustomFontEditText
                    android:id="@+id/idEtEventoNuevoLugar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignStart="@+id/idSpEventoNuevoCiudad"

                    android:hint="@string/sTipoSala"
                    android:textSize="@dimen/size_12"
                    app:font="@string/font_name_source_amatic_regular" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/idSpEventoNuevoCategoria"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tilEventoNuevoLugar"
                android:background="@drawable/btn_dropdown"

                />

            <Spinner
                android:id="@+id/idSpEventoNuevoClasificacion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idSpEventoNuevoCategoria"
                android:background="@drawable/btn_dropdown"


                />

            <Spinner
                android:id="@+id/idSpEventoNuevoTipo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idSpEventoNuevoClasificacion"
                android:background="@drawable/btn_dropdown" />

            <Spinner
                android:id="@+id/idSpEventoNuevoCiudad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idSpEventoNuevoTipo"
                android:background="@drawable/btn_dropdown" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilEventoNuevoLocalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idSpEventoNuevoCiudad"
                app:errorEnabled="true"

                >

                <AutoCompleteTextView
                    android:id="@+id/idEtEventoNuevoLocalidad"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:hint="@string/sLocalidad"
                    android:textSize="@dimen/size_12"
                    app:font="@string/font_name_source_amatic_regular" />

            </android.support.design.widget.TextInputLayout>


            <ImageButton
                android:id="@+id/idBEventoNuevoFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tilEventoNuevoLocalidad"
                android:layout_marginBottom="@dimen/size_4"
                android:layout_marginTop="@dimen/size_4"
                android:background="@drawable/btn_fecha"
                android:clickable="true"
                android:contentDescription="@string/descripcion"
                android:enabled="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/idBEventoNuevoHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idBEventoNuevoFecha"
                android:layout_marginBottom="@dimen/size_4"
                android:layout_marginTop="@dimen/size_4"
                android:background="@drawable/btn_hora"
                android:clickable="true"
                android:contentDescription="@string/descripcion" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilEventoNuevoArtista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idBEventoNuevoHora"

                app:errorEnabled="true"

                >

                <com.findandgoapp.custom.CustomFontEditText
                    android:id="@+id/idEtEventoNuevoArtista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="@string/sArtistasInvolucrados"
                    android:textSize="@dimen/size_12"
                    app:font="@string/font_name_source_amatic_regular" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilEventoNuevoPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:errorEnabled="true">

                <com.findandgoapp.custom.CustomFontEditText
                    android:id="@+id/idEtEventoNuevoPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tilEventoNuevoArtista"
                    android:hint="@string/sPrecioMax"
                    android:inputType="number"
                    android:textSize="@dimen/size_12"
                    app:font="@string/font_name_source_amatic_regular" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilEventoNuevoFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/cbHoraEv"
                    app:errorEnabled="true">

                </android.support.design.widget.TextInputLayout>
            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/idBEventoNuevoRegistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tilEventoNuevoArtista"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_aceptar_v"
                android:textStyle="bold"
                tools:ignore="ContentDescription" />

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cbHoraEv"
                android:layout_alignEnd="@+id/idBEventoNuevoFecha"
                android:layout_alignTop="@+id/cbFechaEv"
                android:layout_toStartOf="@+id/cbFechaEv"
                app:errorEnabled="true">

            </android.support.design.widget.TextInputLayout>

            <com.findandgoapp.custom.CustomFontTextView
                android:id="@+id/idTvEventoNuevoHora"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/cbHoraEv"
                android:layout_alignBottom="@+id/cbHoraEv"
                android:layout_toEndOf="@+id/idBEventoNuevoHora"
                android:paddingStart="@dimen/size_20"
                android:text="@string/sHHMM"
                android:textSize="@dimen/size_14"
                app:font="@string/font_name_source_amatic_regular" />

            <CheckBox

                android:id="@+id/cbFechaEv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/idBEventoNuevoFecha"
                android:layout_toEndOf="@+id/idTvEventoNuevoFecha"
                android:text="@string/sCualquierFecha"
                android:textColor="@color/link"
                android:textSize="@dimen/size_checkBox" />

            <CheckBox
                android:id="@+id/cbHoraEv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/cbFechaEv"
                android:layout_below="@+id/idBEventoNuevoFecha"
                android:text="@string/sCualquierHora"
                android:textColor="@color/link"
                android:textSize="@dimen/size_checkBox" />

            <com.findandgoapp.custom.CustomFontTextView
                android:id="@+id/idTvEventoNuevoFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/cbFechaEv"

                android:layout_alignBottom="@+id/cbFechaEv"
                android:layout_toEndOf="@+id/idBEventoNuevoFecha"
                android:paddingLeft="@dimen/size_20"
                android:paddingRight="@dimen/size_20"
                android:text="@string/sAAMMDD"
                android:textSize="@dimen/size_14"
                app:font="@string/font_name_source_amatic_regular" />


        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>
</FrameLayout>