<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.findandgoapp.fragment.ComentarioFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llComentariosTitulo">

        <com.findandgoapp.custom.CustomFontTextView
            android:id="@+id/idTvAddComen"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="@string/sModificaEliminaComentario"
            android:textSize="@dimen/size_20"
            android:layout_gravity="center"
            android:textColor="@color/verdeAgua"
            app:font="@string/font_name_source_amatic_regular_bold"

            android:paddingTop="@dimen/size_10"
            android:paddingBottom="@dimen/size_10" />
    </LinearLayout>


    <com.findandgoapp.custom.CustomFontEditText
        android:id="@+id/idEtAddComen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/sComenta"
        android:textColor="@color/negro"
        app:font="@string/font_name_source_amatic_regular"
        android:paddingTop="@dimen/size_20"
        android:layout_below="@+id/llComentariosTitulo"

        android:layout_alignParentStart="true"

        android:layout_alignEnd="@+id/llComentariosTitulo" />

    <Button
        android:id="@+id/idBCancelaAddComen"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_cancelar"
        android:layout_below="@+id/idEtAddComen"
        android:layout_alignRight="@+id/idEtAddComen"
        android:layout_alignEnd="@+id/idEtAddComen"
        android:layout_marginLeft="@dimen/size_10" />

    <Button
        android:id="@+id/idBDeleteComen"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_delete"
        android:layout_alignLeft="@+id/idEtAddComen"
        android:layout_alignStart="@+id/idEtAddComen"
        android:layout_below="@id/idEtAddComen" />

    <Button
        android:id="@+id/idBAddComen"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_aceptar"
        android:layout_alignTop="@+id/idBCancelaAddComen"
        android:layout_toLeftOf="@+id/idBCancelaAddComen"
        android:layout_toStartOf="@+id/idBCancelaAddComen" />


</RelativeLayout>

